{
    "name": "sabirivan/gendiff",
    "description": "Generator of differences in config files",
    "keywords": [
      "hexlet",
      "php",
      "project",
      "level2",
      "gendiff"
    ],
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Иван Сабиров",
            "email": "sabirivan@yandex.com"
        }
    ],
    "scripts": {
      "phpcs": "phpcs",
      "phpunit": "phpunit"
    },
    "autoload": {
      "files": [
        "src/runner.php",
        "src/builder.php",
        "src/parser.php",
        "src/formatters/pretty.php",
        "src/formatters/plain.php"
      ]
    },
    "bin": [
      "bin/gendiff"
    ],
    "require": {
      "docopt/docopt": "^1.0",
      "funct/funct": "^1.5",
      "symfony/yaml": "^4.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpunit/phpunit": "^8.4"
    }
}
